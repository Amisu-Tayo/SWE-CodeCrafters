{
    "version": 2,
    "builds": [
      {
        "src": "api/*.py",
        "use": "@vercel/python"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "handle": "filesystem"
      },
      {
        "src": "/api/(inventory|orders|usage|reports)(?:/.*)?$",
        "dest": "api/index.py"
      },
      {
        "src": "/api/(.*)$",
        "dest": "api/$1.py"
      }
    ]
  }